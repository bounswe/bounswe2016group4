<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Assignment 6 of Group 4</display-name>
    <servlet>
        <servlet-name>SelemeServlet</servlet-name>
        <servlet-class>edu.boun.cmpe.SelemeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AlptekinServlet</servlet-name>
        <servlet-class>edu.boun.cmpe.AlptekinServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AlptekinDatabaseServlet</servlet-name>
        <servlet-class>edu.boun.cmpe.AlptekinDatabaseServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SelemeDatabaseServlet</servlet-name>
        <servlet-class>edu.boun.cmpe.SelemeDatabaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelemeServlet</servlet-name>
        <url-pattern>/selemeServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AlptekinServlet</servlet-name>
        <url-pattern>/alp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AlptekinDatabaseServlet</servlet-name>
        <url-pattern>/alptekinDatabaseAction</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SelemeDatabaseServlet</servlet-name>
        <url-pattern>/selemeDatabaseAction</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

