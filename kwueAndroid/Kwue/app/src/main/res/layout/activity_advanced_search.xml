<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advanced_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.knowwhatwoueat.kwue.Activities.AdvancedSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="Search"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/advancedSearchTextBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="Protein"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/proteinLowerBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="L"
            android:inputType="number"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/proteinUpperBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="U"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="95dp"
            android:text="Fat"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/fatLowerBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="L"
            android:inputType="number"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/fatUpperBoun"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="U"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Carbonhydrate"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/carbonhydrateLowerBoun"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="L"
            android:inputType="number"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/carbonhydrateUpperBoun"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="U"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="Calorie"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/calorieLowerBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="L"
            android:inputType="number"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/calorieUpperBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="U"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="Sugar"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/sugarLowerBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="L"
            android:inputType="number"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/sugarUpperBound"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="U"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="Wanted"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/wantedTextBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Wanted"
            android:inputType="text"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:text="Unwanted"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/unwantedTextBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unwanted"
            android:inputType="text"
            android:textSize="14sp" />


    </LinearLayout>

    <Button
        android:id="@+id/advancedSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Search"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
    <ListView
        android:id="@+id/advancedSearchList"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </ListView>
</LinearLayout>
