<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_for_food_server"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.knowwhatwoueat.kwue.Activities.RegistrationForFoodServer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="10dp"
            android:text="Restaurant Name"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/restaurantNameTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:text="Restaurant Description"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/restaurantDescriptionTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Restaurant Description"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:text="Restaurant Address"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/restaurantAddressTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Restaurant Addres"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailFoodServerTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordFoodServerTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:text="Password"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordAgainFoodServerTextbox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Password Again"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="10dp"
            android:text="City"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/cityOptionFoodServer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="20dp">

        </Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/createAccountFoodServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />


</LinearLayout>
