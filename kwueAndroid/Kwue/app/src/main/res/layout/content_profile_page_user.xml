<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile_page_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.knowwhatwoueat.kwue.Activities.ProfilePageActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/user_email_address"
            android:layout_below="@+id/user_name"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:id="@+id/user_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <Button
            android:layout_alignParentEnd="true"
            android:layout_below="@id/user_email_address"
            android:id="@+id/add_food_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:text="Add Food"/>

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/user_tag"
        android:layout_below="@+id/user_info"
        >

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text="User Tags"
            android:id="@+id/user_tags_title"/>

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/add_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:text="Add Tag"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_tags_title"
            android:id="@+id/tags_list"
            android:numColumns="2"
            >
        </GridView>


    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/recent_consumptions"
    android:layout_below="@+id/user_tag"
    >

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/consumption_history_interval"
        android:spinnerMode="dropdown"
        android:layout_below="@id/consumption_history_title"
        android:layout_marginLeft="100dp">

    </Spinner>

        <Button
        android:id="@+id/all_consumption_history"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:text="See All"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:text="Recent Consumptions"
            android:id="@+id/consumption_history_title"
            android:layout_alignBaseline="@+id/all_consumption_history"
            android:layout_alignBottom="@+id/all_consumption_history"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <Button
        android:layout_below="@id/recent_consumptions"
        android:id="@+id/goHomeButton"
        android:text="Home Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eating_preferences"
        android:layout_below="@+id/recent_consumptions"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:id="@+id/eating_preferences_title"
            android:text="Eating Preferences"/>
        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eating_preferences_title"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:id="@+id/eating_preferences_grid"
            />

        <Button

            android:id="@+id/update_eating_preferences"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:text="Update"
            android:layout_alignParentEnd="true">
        </Button>



    </RelativeLayout>

</RelativeLayout>
